set alias_file = ~/.mutt/aliases
set beep_new = yes
set charset = "utf-8"
set pager_context = 5
set sort = threads
set sort_aux = reverse-last-date-received
set include = yes
set editor = "nvim +':set textwidth=80' +':set wrap'"
set mbox_type = Maildir
set sendmail = /usr/local/Cellar/msmtp/1.6.6/bin/msmtp
set realname = "Ben Burwell"
set from = "ben@benburwell.com"
set use_envelope_from = yes
set move = no
set delete = yes
set mail_check = 5
set timeout = 30
unset record

bind index gg first-entry
bind index G last-entry

mailboxes +INBOX

# viewing
ignore *
unignore from: to: cc: date: subject:
hdr_order from: to: cc: date: subject:

macro index <f2> '<sync-mailbox><enter-command>source ~/.mutt/benburwell<enter><change-folder>!<enter>'
macro index <f3> '<sync-mailbox><enter-command>source ~/.mutt/proton<enter><change-folder>!<enter>'
macro index <f4> '<sync-mailbox><enter-command>source ~/.mutt/virtyx<enter><change-folder>!<enter>'
macro index <f5> '<sync-mailbox><enter-command>source ~/.mutt/gmail<enter><change-folder>!<enter>'

source ~/.mutt/benburwell
